@using Blazor.Pages
<div class="card signalr-user-card">
    <div class="card-header">
        @UserName
    </div>
    <div class="card-body">
            @foreach (var msg in Msgs)
            {
                <p class="@(msg.IsAdmin ? "is-admin" : "is-user")">
                    @msg.Msg
                </p>
            }
    </div>
</div>

<style>
    .signalr-user-card {
        border: 1px solid black;
        border-radius: 10px;
        margin-top: 10px;
        box-shadow: 10px 10px 10px rgba(0, 0, 0, 0.15);
    }

    .is-admin {
        background-color: rgba(33, 255, 0, 0.25);
        padding: 5px;
        justify-content: end;
        display: flex;
        margin-left: 20%;
        border-left: 4px solid green;
        border-radius: 5px;
    }

    .is-user {
        background-color: rgba(0, 111, 255, 0.26);
        padding: 5px;
        color: black;
        margin-right: 20%;
        border-right: 4px solid blue;
        border-radius: 5px;
    }
</style>

@code {

    [Parameter] public required string UserName { get; set; }
    [Parameter] public required List<SignalRTest.UserMsgs> Msgs { get; set; }

}